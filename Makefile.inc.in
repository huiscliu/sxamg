SXAMGLIB        = sxamg
LIB_SUFFIX      = .a

CPP	            = @CPP@
CPPFLAGS        = @CPPFLAGS@

CC              = @CC@
CFLAGS          = @CFLAGS@

LINKER          = @LINKER@
LDFLAGS         = @LDFLAGS@
LIBS            = @LIBS@

AR              = @AR@
RANLIB          = @RANLIB@

prefix		= @prefix@
libdir      = @prefix@/lib
includedir  = @prefix@/include
RPATH_FLAG	= @RPATH_FLAG@

%.o : %.c
	${CC} ${CFLAGS} ${CPPFLAGS} -c $*.c
	@echo

% : %.o
	${LINKER} ${LDFLAGS} -o $@ $*.o ${LIBS}
	@echo

